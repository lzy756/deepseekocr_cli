{
  "name": "deepseek-ocr-cli",
  "version": "1.0.0",
  "description": "CLI tool for DeepSeek-OCR API - perform OCR on images and PDFs",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "deepseek-ocr": "bin/deepseek-ocr.js"
  },
  "scripts": {
    "start": "node bin/deepseek-ocr.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write 'src/**/*.js' 'tests/**/*.js' 'bin/**/*.js'"
  },
  "keywords": [
    "ocr",
    "deepseek",
    "cli",
    "pdf",
    "image",
    "markdown",
    "document-processing"
  ],
  "author": "OCR CLI Developer",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.6.2",
    "axios-retry": "^3.9.1",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "prettier": "^3.1.1"
  }
}
